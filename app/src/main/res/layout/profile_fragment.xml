<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:fontFamily="sans-serif">


    <androidx.cardview.widget.CardView
        android:id="@+id/last"
        android:layout_width="400dp"
        android:layout_height="330dp"
        android:layout_centerInParent="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="70dp">

        <RelativeLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:fontFamily="sans-serif">
            <TextView
                android:id="@+id/PnameHint"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Fullname: "
                android:textSize="14dp"
                app:fontFamily="sans-serif"/>
        <TextView
            android:id="@+id/user_Pname"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/PnameHint"
            android:textSize="16dp"
            android:textColor="#000"
            app:fontFamily="sans-serif"/>

            <TextView
                android:id="@+id/PemailHint"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_below="@id/user_Pname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Email: "
                android:textSize="14dp" />

        <TextView
            android:id="@+id/user_Pemail"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_below="@id/PemailHint"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16dp"
            android:textColor="#000"/>
            <Button
                android:id="@+id/verifieButton"
                android:layout_width="90dp"
                android:layout_height="30dp"
                android:text="Verify email"
                android:layout_toRightOf="@+id/user_Pemail"
                android:layout_below="@+id/PemailHint"
                android:textAllCaps="false"
                app:fontFamily="sans-serif"
                android:background="@drawable/button"
                android:visibility="gone"/>
            <TextView
                android:id="@+id/PgenderHint"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_below="@id/user_Pemail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Gender: "
                android:textSize="14dp" />
            <TextView
                android:id="@+id/user_Pgender"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_below="@id/PgenderHint"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="16dp"
                android:textColor="#000"/>

            <TextView
                android:id="@+id/PbirthHint"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_below="@id/user_Pgender"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Date of birth:"
                android:textSize="14dp"/>

                <TextView
                android:id="@+id/user_Pbirth"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_below="@id/PbirthHint"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14dp"
                android:textColor="#000" />


        </RelativeLayout>

    </androidx.cardview.widget.CardView>

</RelativeLayout>