<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#d6d7d7"
    app:fontFamily="sans-serif"
    android:padding="20dp">
    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:contentDescription="@string/take_a_picture"
        android:src="@drawable/download"
        android:layout_marginBottom="20dp"
        android:visibility="invisible"/>

    <RelativeLayout
        android:id="@+id/buttonLayout2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:visibility="visible">

    <ImageButton
        android:id="@+id/imageTake"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:contentDescription="@string/take_a_picture"
        android:src="@drawable/ic_photo_camera_100"
        android:layout_centerInParent="true"
        android:layout_marginBottom="20dp" />

    <TextView
        android:id="@+id/imagePreview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/take_a_picture_of_your_desease"
        android:textColor="#000000"
        android:layout_below="@+id/imageTake"
        android:layout_marginTop="10dp" />

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/buttonLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        android:visibility="invisible">

        <Button
            android:id="@+id/continuePic"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="50dp"
            android:text="Continue"
            android:background="@drawable/button"
            android:layout_marginRight="1dp"
            android:textSize="16sp"/>

        <Button
            android:id="@+id/discardPic"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="50dp"
            android:text="try another"
            android:background="@drawable/button"
            android:layout_marginLeft="1dp"
            android:textSize="16sp"/>


    </LinearLayout>

</RelativeLayout>